PORT=5000  # Ejemplo: puerto donde se ejecutará la aplicación (5000 por defecto)

# Configuración de la base de datos
DB_TYPE=postgres  # Ejemplo: tipo de base de datos, puede ser mysql, sqlite, etc.
DB_HOST=localhost  # Ejemplo: dirección del host de la base de datos (localhost para local)
DB_PORT=5432  # Ejemplo: puerto de la base de datos (5432 para PostgreSQL)
DB_USERNAME=admin  # Ejemplo: nombre de usuario de la base de datos
DB_PASSWORD=password123  # Ejemplo: contraseña de la base de datos
DB_NAME=app_database  # Ejemplo: nombre de la base de datos
DB_SYNCHRONIZE=true  # Ejemplo: sincronización automática de esquemas (true para desarrollo)
DB_LOGGING=true  # Ejemplo: habilitar logging de consultas SQL (true para desarrollo)
DB_ENTITIES=./dist/**/*.entity{.js,.ts}  # Ejemplo: ruta de las entidades en el proyecto
DB_DROPSCHEMA=false  # Ejemplo: eliminar y recrear esquemas al iniciar (false recomendado)
DB_MIGRATION=./dist/**/*.migration{.ts,.js}  # Ejemplo: ruta de migraciones en el proyecto

# Configuración para cifrado de contraseñas
SALT=12  # Ejemplo: número de rondas para el salting (12 es seguro)

# Configuración de Cloudinary (almacenamiento de imágenes)
CLOUD_NAME=example_cloud  # Ejemplo: nombre de tu cuenta de Cloudinary
API_KEY=1234567890  # Ejemplo: clave de API de Cloudinary
API_SECRET=abcdef123456  # Ejemplo: secreto de API de Cloudinary

# Clave secreta para JWT o tokens
SECRET_WORD=esta_es_una_clave_super_secreta_que_nadie_debería_saber  # Ejemplo de clave secreta para autenticación

# Configuración de PostgreSQL (opcional, si usas Docker)
POSTGRES_DB=example_database  # Ejemplo: nombre de la base de datos
POSTGRES_PASSWORD=docker_password  # Ejemplo: contraseña para la base de datos en Docker